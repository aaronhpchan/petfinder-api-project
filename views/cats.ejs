<%- include('partials/head') %>

<div class="pb-5">
    <div class="container py-5">
        <h1 class="text-center">Cats</h1>
        <div class="row px-lg-5">
            <!-- Display 6 cats -->
            <% for (i = 0; i < cats.length; i++) { %>
                <div class="col-md-6 col-xl-4 px-5 px-md-3 pt-5 text-center">
                    <div class="card">
                        <% if (cats[i].photos[0] === undefined) { %>
                            <div class="img-container card-body bg-white">
                                <a href="<%= cats[i].id %>"><img src="/images/images.jpg" class="bg-white" alt="No image available"></a>
                            </div>                   
                        <% } else { %>
                            <div class="img-container card-body bg-white">
                                <a href="<%= cats[i].id %>"><img src="<%= cats[i].photos[0].medium %>" class="bg-white" alt="<%= cats[i].name %>, an adoptable <%= cats[i].species %> in <%= cats[i].contact.address.city %>, <%= cats[i].contact.address.state %>"></a>   
                            </div>                        
                        <% } %>
                        <div class="card-body light-div">
                            <div class="name-div"><a href="<%= cats[i].id %>" class="text-decoration-none animal-name"><%= cats[i].name %></a></div>
                            <div><%= cats[i].gender %> &bull; <%= cats[i].age %></div>
                        </div>
                    </div>
                </div> 
            <% } %>      
        </div>        
    </div>
</div>

<%- include('partials/footer') %>